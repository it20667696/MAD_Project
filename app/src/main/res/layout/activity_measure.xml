<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Measure">

  <TextView
      android:id="@+id/water"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginTop="24dp"
      android:text="WATER INTAKE"

      android:textColor="#022131"
      android:textSize="30sp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/urine"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginTop="58dp"
      android:hint="urine"

      android:text="AND URINE OUT MEASURE"
      android:textColor="#022131"
      android:textSize="30sp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


  <EditText
      android:id="@+id/Time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="164dp"
      android:autofillHints=""
      android:background="@drawable/editer"
      android:ems="10"
      android:hint="10:10"
      android:inputType="text"
      android:minHeight="48dp"
      android:textAlignment="center"
      android:textColorHint="#78909C"
      android:textSize="20sp"
      app:layout_constraintBottom_toTopOf="@+id/waterLevel"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="InvalidId" />

  <EditText
      android:id="@+id/waterLevel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="88dp"
      android:layout_marginTop="244dp"
      android:background="@drawable/editer2"
      android:ems="10"
      android:hint="water_level"
      android:inputType="text"
      android:minHeight="48dp"
      android:text="@string/water_level"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


  <EditText
      android:id="@+id/urineLevel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="88dp"
      android:layout_marginTop="300dp"
      android:background="@drawable/editer2"
      android:ems="10"
      android:hint="urine Level"
      android:inputType="text"
      android:minHeight="48dp"
      android:text="@string/urine_level"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btn_submit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="148dp"
      android:layout_marginTop="400dp"
      android:text="ADD"
      android:backgroundTint="#74020F"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btn_display"
      android:layout_width="250dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="70dp"
      android:layout_marginTop="444dp"
      android:text="View"
      android:backgroundTint="#74020F"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btn_edit"
      android:layout_width="250dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="70dp"
      android:layout_marginTop="500dp"
      android:text="Edit"
      android:backgroundTint="#74020F"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />



  </androidx.constraintlayout.widget.ConstraintLayout>