<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/microsoftteams_image__2_"
    android:orientation="vertical"
    tools:context="com.example.madp.HomeActivity">

    <LinearLayout
        android:id="@+id/Topic1"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="4"

        android:gravity="center">

        <TextView
            android:id="@+id/top"
            android:layout_width="wrap_content"
            android:layout_height="139dp"
            android:layout_weight="1"
            android:paddingLeft="90dp"
            android:text="@string/top"
            android:textColor="#A63C3C"
            android:textSize="48sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="6"
        android:background="#fff"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alignmentMode="alignMargins"
            android:background="#C5EDE7"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:padding="14dp"
            android:rowCount="2">


            <androidx.cardview.widget.CardView
                android:id="@+id/report1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/microsoftteams_image__1_"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="8"
                        android:background="@drawable/free_user_group_icon_296_thumb">

                    </ImageView>

                    <TextView

                        android:layout_width="82dp"
                        android:layout_height="54dp"
                        android:text="User Management"
                        android:textAlignment="center"
                        android:textColor="#FF5722"
                        android:textSize="16sp"
                        android:textStyle="bold|italic">

                    </TextView>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/report2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/_59a2bc335f31700cacba5e1f2556b1f"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="8"
                        android:background="@drawable/_04018">

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:text="Medical Reports"
                        android:textAlignment="center"
                        android:textColor="#FF5722"
                        android:textSize="16sp"
                        android:textStyle="bold|italic">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/report3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_weight="8"
                        android:background="@drawable/_09_5099540_schedule_icon_png_transparent_png">

                    </ImageView>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:text="Shedular"
                        android:textAlignment="center"
                        android:textColor="#FF5722"
                        android:textSize="20sp"
                        android:textStyle="bold|italic">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/report4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="8"
                        android:background="@drawable/images">

                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:text="Admin"
                        android:textAlignment="center"
                        android:textColor="#FF5722"
                        android:textSize="20sp"
                        android:textStyle="bold|italic">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </GridLayout>

    </LinearLayout>


</LinearLayout>